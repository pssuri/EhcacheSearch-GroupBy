<assembly>
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
				<include>*.sources.jar</include>
				<include>*.javadoc.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble</directory>
			<includes>
				<include>*.yml</include>
				<include>*.sh</include>
				<include>README</include>
				<include>templates</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble/templates</directory>
			<filtered>true</filtered>
			<outputDirectory>/templates</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>net.sf.ehcache:ehcache-core-ee</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>false</unpack>
			<scope>provided</scope>
			<includes>
				<include>org.slf4j:slf4j-jdk14</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
